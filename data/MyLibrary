    <script>
        function modal(isbn, title) {
            console.log(title)

            fetch("http://112.170.146.135:3100/reviews/find", {
                        //2번으로 바꾸기
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify({
                            isbn: isbn,
                            idUser: 2,
                        }),
                        })
                        .then((res) => res.json())
                        .then((obj) => {
                          var list = []
                            obj.res.forEach((res)=> {
                                console.log(res.content);
                                
                                const date = res.createdDate.split("T")[0]
                                const content = res.content
                                const quote = res.quote
                                
                                  var review = '<div>'+
                                    `<p>날짜: ${date}</p>`+
                                        `<p>리뷰: ${content}</p>`+
                                        `<p>인용구: ${quote}</p>`+
                                        '</div>'
                                  list.push(review)
                                }
                              )
                                    Swal.fire({
                                        title: title,
                                        html:
                                          '<div id="review-modal">'+  
                                          list + '</div>',
                                        width: 600
                                    }).then(result=>{
                                      console.log(list)
                                    });
                                
                            
                            
                            
                        })
                        .catch((error) => console.log("error:", error));


            
        }

    </script>
    





