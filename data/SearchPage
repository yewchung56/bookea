<body>
  <header>
    <h1><a href="/?id=MainPage">BOOKEA</a></h1>
    <input id="query" type="text" placeholder="검색어를 입력해 주세요" />
    <button id="search">SEARCH</button>
    <button id="logout">LOGOUT</button>
  </header>
  <p></p>
  <section id="content">
    <h2>검색결과</h2>
    <back>
      <h3>책 표지</h3>
      <h3>책 제목</h3>
      <h3>저자</h3>
      <h3>출판사</h3>
      <h3>발행일</h3>
      <h3>위시리스트에 담기</h3>
    </back>
    <hr />
    <div></div>
    <script
      src="https://code.jquery.com/jquery-3.6.1.js"
      integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI="
      crossorigin="anonymous"
    ></script>

    <script>
      $(document).ready(function () {
        var pageNum = 1;
        $("#search").click(function () {
          $("div").html("");

          $.ajax({
            method: "GET",
            url: "https://dapi.kakao.com/v3/search/book?target=title",
            data: { query: $("#query").val(), page: pageNum },
            headers: {
              Authorization: "KakaoAK 5032971dfe6ef4c1396c474be397c09c",
            },
          }).done(function (msg) {
            console.log(msg.documents[0].title);
            console.log(msg.documents[0].thumbnail);
            for (var i = 0; i < 10; i++) {
              const dateArr = msg.documents[i].datetime.split("T");
              var $result = $(
                "<back>" +
                  "<img src = '" +
                  msg.documents[i].thumbnail +
                  "'/>" +
                  "<p>" +
                  msg.documents[i].title +
                  "<p>" +
                  msg.documents[i].authors +
                  "<p>" +
                  msg.documents[i].publisher +
                  "<p>" +
                  dateArr[0] +
                  "<p>" +
                  `<i class="fa-solid fa-cart-shopping fa-2x"></i>` +
                  "</back>"
              );
              $("div").append($result);
              $("div").append("<hr>");
            }
          });
        });

        $(window).scroll(function () {
          if (
            Math.ceil($(window).scrollTop()) + $(window).height() >=
            $(document).height()
          ) {
            pageNum++;

            $.ajax({
              method: "GET",
              url: "https://dapi.kakao.com/v3/search/book?target=title",
              data: { query: $("#query").val(), page: pageNum },
              headers: {
                Authorization: "KakaoAK 5032971dfe6ef4c1396c474be397c09c",
              },
            }).done(function (msg) {
              console.log(msg);
              for (var i = 0; i < 10; i++) {
                const dateArr = msg.documents[i].datetime.split("T");
                var $result = $(
                  "<back>" +
                    "<img src = '" +
                    msg.documents[i].thumbnail +
                    "'/>" +
                    "<p>" +
                    msg.documents[i].title +
                    "<p>" +
                    msg.documents[i].authors +
                    "<p>" +
                    msg.documents[i].publisher +
                    "<p>" +
                    dateArr[0] +
                    "<p>" +
                    `<i class="fa-solid fa-cart-shopping"></i>` +
                    "</back>"
                );
                $("div").append($result);
                $("div").append("<hr>");
              }
            });
          }
        });
      });
    </script>
  </section>
</body>
