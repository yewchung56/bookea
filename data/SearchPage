  <script
    src="https://code.jquery.com/jquery-3.6.1.js"
    integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI="
    crossorigin="anonymous"
  ></script>
  <script type="text/javascript">
  function hello()  {
    swal("위시리스트에 추가되었습니다.","","success");
  }
</script>

  <script>
    $(document).ready(function () {
      var pageNum = 1;
      $("#search").click(function () {
        $("div").html("");

        $.ajax({
          method: "GET",
          url: "https://dapi.kakao.com/v3/search/book?target=title",
          data: { query: $("#query").val(), page: pageNum },
          headers: {
            Authorization:"KakaoAK 5032971dfe6ef4c1396c474be397c09c",
          },
        }).done(function (msg) {
          console.log(msg.documents[0].title);
          console.log(msg.documents[0].thumbnail);
          console.log(msg.documents[0].authors);
          for (var i = 0; i < 10; i++) {
            const dateArr = msg.documents[i].datetime.split('T');
            var $result = $("<back>"+"<img src = '" + msg.documents[i].thumbnail + "'/>"+"<p>"+
                msg.documents[i].title +"<p>"+
                msg.documents[i].authors+"<p>"+
                  msg.documents[i].publisher+"<p>"+
                dateArr[0]+"<p>"+
                `<i id="wish" class="fa-solid fa-cart-shopping fa-2x" onclick="hello()"></i>`+"</back>"); 
            $("div").append(
              $result
            );
      $("div").append("<hr>");
          }
        });
      });
    
      $(window).scroll(function () {
        if (
          Math.ceil($(window).scrollTop()) + $(window).height() >=
          $(document).height()
        ) {
          pageNum++;

          $.ajax({
            method: "GET",
            url: "https://dapi.kakao.com/v3/search/book?target=title",
            data: { query: $("#query").val(), page: pageNum },
            headers: {
              Authorization: "KakaoAK 5032971dfe6ef4c1396c474be397c09c",
            },
          }).done(function (msg) {
            console.log(msg);
            for (var i = 0; i < 10; i++) {
              const dateArr = msg.documents[i].datetime.split('T');
              var $result = $("<back>"+"<img src = '" + msg.documents[i].thumbnail + "'/>"+"<p>"+
                msg.documents[i].title +"<p>"+
                msg.documents[i].authors+"<p>"+
                  msg.documents[i].publisher+"<p>"+
                dateArr[0]+"<p>"+
                    `<i class="fa-solid fa-cart-shopping fa-2x" onclick="hello()"></i>`+"</back>");
                
            $("div").append(
              $result
            );
            $("div").append("<hr>");
            }
          });
        }
      });
    });
  </script>
  </section>
